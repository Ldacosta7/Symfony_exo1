{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="row d-flex justify-content-evenly">


    {% for i in 0..shonens|length-1 %}
    <div class="card col-3 m-2">
        <img src="{{ img[i]}}" class="card-img-top" >
        <div class="card-body">
            <h5 class="card-title">{{ shonens[i] }}</h5>
            <p class="card-text">{{ auteurs[i]}}</p>
            <p class ="card-text"> Tomes : {{ nbTomes[i] }}</p>
            <a href="{{ lien[i] }}" class="btn btn-primary">En Savoir plus</a>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
